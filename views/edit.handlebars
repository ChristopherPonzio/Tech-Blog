<div class="post card">
    <div class="card-header">
        <h2>{{name}}</h2>
        <p>{{{get_emoji}}}</p>
        <p>{{description}}</p>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{id}}" />
        <label class="form-label" for="post-body">Edit Post</label>
        <textarea name="post-body" class="form-input">{{body}}</textarea>

        <button type="submit" class="btn">Update</button>

        <button type="button" id="delete-btn" class="btn">Delete</button>
    </form>
</div>

<script src="../js/edit.js"></script>